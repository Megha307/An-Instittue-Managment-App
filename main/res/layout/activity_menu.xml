<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@color/listcolor">
    <android.support.v7.widget.Toolbar
        android:id="@+id/menutoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbarback">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MENU"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:layout_marginRight="25dp"/>
    </android.support.v7.widget.Toolbar>


    <ScrollView
android:layout_below="@+id/menutoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/textcolor"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:id="@+id/objectivecard"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:cardCornerRadius="15dp"

                    >
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView

                            android:id="@+id/objectiveimage"
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/addicon"
                            android:layout_margin="5dp"
                            />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Student"
                            android:textSize="20dp"
                            android:layout_marginLeft="18dp"
                            android:textColor="@android:color/black"
                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/membercard"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:cardCornerRadius="15dp">
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/memberimage"
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/viewstudent"
                            android:layout_margin="5dp"
                            />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Student"
                            android:textSize="20dp"
                            android:layout_marginLeft="18dp"
                            android:textColor="@android:color/black"
                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:id="@+id/eventcard"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:cardCornerRadius="15dp">
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/eventimg"
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/sms"
                            android:layout_margin="5dp"
                            />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Send SMS"
                            android:textSize="20dp"
                            android:layout_marginLeft="18dp"
                            android:textColor="@android:color/black"
                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/contactcard"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:cardCornerRadius="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/contactimg"
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/video"
                            android:layout_margin="5dp"
                            />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VIDEOS"
                            android:textSize="20dp"
                            android:layout_marginLeft="18dp"
                            android:textColor="@android:color/black"
                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>





            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:id="@+id/upcomingcard"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:cardCornerRadius="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/upcomingimg"
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_action_call"
                            android:layout_margin="5dp"
                            />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact Us"
                            android:textSize="20dp"
                            android:layout_marginLeft="18dp"
                            android:textColor="@android:color/black"
                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/videocard"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:cardCornerRadius="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/videoimg"
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/aboutus"
                            android:layout_margin="5dp"
                            />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About Us"
                            android:textSize="20dp"
                            android:layout_marginStart="18dp"
                            android:textColor="@android:color/black"
                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:id="@+id/uploadcard"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:cardCornerRadius="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/uploadimg"
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:srcCompat="@drawable/ic_image_black_24dp"
                            android:layout_margin="5dp"
                            />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload Pictures"
                            android:textSize="20dp"
                            android:layout_marginLeft="18dp"
                            android:textColor="@android:color/black"
                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <!--<android.support.v7.widget.CardView-->
                    <!--android:id="@+id/feescard"-->
                    <!--android:layout_margin="20dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:layout_width="140dp"-->
                    <!--android:layout_height="140dp"-->
                    <!--app:cardCornerRadius="15dp">-->
                    <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:orientation="vertical">-->
                        <!--<ImageView-->
                            <!--android:id="@+id/feesimage"-->
                            <!--android:layout_gravity="center"-->
                            <!--android:layout_width="100dp"-->
                            <!--android:layout_height="100dp"-->
                            <!--android:src="@drawable/ic_action_fees"-->
                            <!--android:layout_margin="5dp"-->
                            <!--/>-->
                        <!--<TextView-->

                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="FEES STRUCTURE"-->
                            <!--android:textSize="20dp"-->
                            <!--android:layout_marginStart="18dp"-->
                            <!--android:textColor="@android:color/black"-->
                            <!--/>-->
                    <!--</LinearLayout>-->

                <!--</android.support.v7.widget.CardView>-->


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>